mixin textSplit(text)
  -
    var beforeText = text
    var beforeTextArr = beforeText.split('');
    var afterText = '';
    for (var s = 0; s < beforeTextArr.length; s++)
      if(beforeTextArr[s] == ' ')
        afterText += '<span class="space">' + beforeTextArr[s] + '</span>';
      else if(beforeTextArr[s] == '\n')
        afterText += '<br>';
      else
        afterText += '<span class="char">' + beforeTextArr[s] + '</span>';
  | !{afterText}
